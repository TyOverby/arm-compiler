{
  "name": "arm-compiler",
  "version": "1.0.3",
  "description": "",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepublish": "mkdir -p dist && npm run compile && npm run copy-files && npm run format && tsc",
    "compile": "ts-node compiler/compiler.ts compiler/_template.json dist/deploymentTemplate.d.ts whitelist.txt",
    "copy-files": "mkdir -p dist/dist/ && cp dist/deploymentTemplate.d.ts dist/dist/",
    "format": "tsfmt -r dist/deploymentTemplate.d.ts",
    "build": "npm run prepublish",
    "test": "mocha -r ts-node/register tests/**/*.ts"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.0.10",
    "@types/colors": "^1.1.3",
    "@types/json-schema": "^6.0.0",
    "@types/mocha": "^2.2.45",
    "@types/node": "^8.5.2",
    "chai": "^4.1.2",
    "colors": "^1.1.2",
    "mocha": "^4.1.0",
    "ts-node": "^4.1.0",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2",
    "typescript-formatter": "^7.0.1"
  }
}
